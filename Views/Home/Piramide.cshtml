@model int



    @for(int i = 0 ; i < Model ; i++)
    {
        @for(int espaciosEnBlanco = Model - i; espaciosEnBlanco > 1 ; espaciosEnBlanco--)
        {
            <img style="float: left; padding: 25px; background-color: blue" />
        }
        @for(int bloques = 0; bloques <= i ; bloques++)
        {
            <img  style="float: left;"src="~/images/bloque.webp" alt="#"/>
        }

        <br style="clear: left;"/>
         
    }

    


           



